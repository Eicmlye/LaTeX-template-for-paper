\RequirePackage{multicol}  % Allow multi-column layout.

\RequirePackage{hyperref}  % Hyperlinks and cross-references.
	\hypersetup{
		%hidelinks, % links will neither be colored nor color-framed.
		colorlinks=true,  % If hidelinks is not set, when colorlinks=true the characters of links will be colored, otherwise they will be color-framed.
		linkcolor=black,  % Color of cross-references.
		citecolor=black,  % Color of bibliography citation.
		urlcolor=blue  % Color of URL links.
		}
